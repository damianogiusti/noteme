<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="315dp"
    android:layout_height="match_parent"
    tools:context="it.tsamstudio.noteme.NuovaNotaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ScrollView>

    <RelativeLayout
        android:id="@+id/relativo"
        android:layout_width="315dp"
        android:layout_height="315dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/etxtTitolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:capitalize="sentences"
            android:gravity="center_horizontal"
            android:hint="@string/titolo_nuova_nota"
            android:maxLength="30"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etxtNota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/etxtTitolo"
            android:layout_alignLeft="@+id/etxtTitolo"
            android:layout_alignRight="@+id/etxtTitolo"
            android:layout_alignStart="@+id/etxtTitolo"
            android:layout_below="@+id/etxtTitolo"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:gravity="start"
            android:hint="@string/inserisci_testo_qui" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_below="@+id/etxtNota"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relativo"
        android:layout_centerHorizontal="true">

    </com.aurelhubert.ahbottomnavigation.AHBottomNavigation>


</RelativeLayout>

